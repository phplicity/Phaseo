<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block htmlPageTitle %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('core/images/crm_small_logo.png') }}">

        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

        {% block headerStylesheets %}
            {{ importmap('loggedInStyles') }}
        {% endblock %}

        {% block headerJavascripts %}
        {% endblock %}
    </head>
    <body class="hold-transition sidebar-mini">
        <!-- Site wrapper -->
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                    {{ render(path('core_admin_menu_left_navbar')) }}
                </ul>

                <!-- Right navbar links -->
                <ul class="navbar-nav ml-auto">
                    {{ render(path('core_admin_menu_language_navbar')) }}
                    <li class="nav-item">
                        <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                            <i class="fas fa-expand-arrows-alt"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/{{ app.request.locale }}/dashboard" class="brand-link">
                    <img src="{{ asset('core/images/crm_small_logo.png') }}" alt="Phaseo Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">Phaseo</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        {{ render(path('core_admin_menu_sidebar_navbar')) }}
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>{% block pageTitle %}{% endblock %}</h1>
                            </div>
                            <div class="col-sm-6">
                                {% block breadcrumb %}{% endblock %}
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>
                {% block body %}{% endblock %}
            </div>
            <!-- /.content-wrapper -->

            <footer class="main-footer">
                <div class="float-right d-none d-sm-block">
                    <b>Version</b> 1.0.0
                </div>
                <strong>Copyright &copy; 2024 <a href="/{{ app.request.locale }}/dashboard">Phaseo</a>.</strong> All rights reserved.
            </footer>
        </div>
        <!-- ./wrapper -->

        <!-- jQuery -->
        <script src="{{ asset('core/plugins/jquery/jquery.min.js') }}"></script>
        <!-- Bootstrap 4 -->
        <script src="{{ asset('core/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

        {% block bodyJavascripts %}{% endblock %}

        <!-- AdminLTE App -->
        <script src="{{ asset('core/adminlte_dist/js/adminlte.min.js') }}"></script>
        {% for flashType, flashTexts in app.flashes %}
            {% for flashText in flashTexts %}
                <script>
                    $(document).Toasts('create', {
                        class: 'bg-{{ flashType }}',
                        body: '{{ flashText }}',
                        title: '{{ 'flash.title'|trans }}',
                        icon: {% if flashType == 'success' %}'fas fa-check-circle'{% else %}'fas fa-times-circle'{% endif %},
                        autohide: true,
                        delay: 7000,
                    })
                </script>
            {% endfor %}
        {% endfor %}
    </body>
</html>
