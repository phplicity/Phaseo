{% extends 'core/logged_in_base.html.twig' %}

{% block htmlPageTitle %}{{ htmlPageTitle|trans({}, 'users') }}{% endblock %}

{% block headerStylesheets %}{{ importmap('usersStyles') }}{% endblock %}

{% block pageTitle %}{{ pageTitle|trans({}, 'users') }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb float-sm-right">
        {% for menuItem in breadcrumb %}
            <li class="breadcrumb-item{% if menuItem.isActive %} active{% endif %}">
                {% if menuItem.isActive == false %}<a href="{{ path(menuItem.path) }}">{% endif %}
                    {{ menuItem.title|trans({}, 'breadcrumb') }}
                    {% if menuItem.isActive == false %}</a>{% endif %}
            </li>
        {% endfor %}
    </ol>
{% endblock %}

{% block body %}
    <!-- Main content -->
    <section class="content">

        <!-- Users DataTable -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ datatable.title|trans({}, 'users') }}</h3>

                <div class="card-tools">
                    <button
                            type="button"
                            class="btn btn-tool"
                            title="{{ 'page.buttons.add_new_user'|trans({}, 'users') }}"
                            onclick="location.href = '{{ path('core_admin_user_administration') }}'"
                    >
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <table id="users-list" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            {% for header in datatable.headers %}
                                <th>{{ header|trans({}, 'users') }}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

    <div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">{{ 'modal.delete.title'|trans({}, 'users') }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'modal.delete.text'|trans({}, 'users') }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'modal.delete.cancel'|trans({}, 'users') }}</button>
                    <button type="button" class="btn btn-danger">{{ 'modal.delete.delete'|trans({}, 'users') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block bodyJavascripts %}
    <!-- DataTables  & Plugins -->
    <script src="{{ asset('core/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-buttons/js/buttons.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('core/plugins/jszip/jszip.min.js') }}"></script>
    <script src="{{ asset('core/plugins/pdfmake/pdfmake.min.js') }}"></script>
    <script src="{{ asset('core/plugins/pdfmake/vfs_fonts.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-buttons/js/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-buttons/js/buttons.print.min.js') }}"></script>
    <script src="{{ asset('core/plugins/datatables-buttons/js/buttons.colVis.min.js') }}"></script>

    <script>
        function openDeleteUserModal(url)
        {
            $("#deleteUserModal .btn-danger").on('click', function() {
                window.location.href = url;
            });
            $("#deleteUserModal").modal('show');
        }

        $(function () {
            $("#users-list").DataTable({
                "ajax": "{{ path('core_admin_user_datatable_list') }}",
                "processing": true,
                "serverSide": true,
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#users-list-wrapper .col-md-6:eq(0)');
        });
    </script>
{% endblock %}